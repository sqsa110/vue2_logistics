$color1 = #99a9bf
$color2 = #58b7ff
$color3 = #1f2d3d

.demo-table-expand
  font-size 0

  label
      width 90px
      color $color1

  .el-form-item
      margin-bottom 0
      width 45%

.table_main
  a,a:link,a:visited,a:active,a:hover
    color $color3
  a:hover
    text-decoration-line underline

.fd_pagination
  margin-top 20px
  margin-right 20px
  float right

  .fd_demonstration,.el-pagination
    float right

  .fd_demonstration
    line-height 32px

.search_main
  margin-left 20px
  .el-form
    width 600px
    overflow hidden
    transition height 1s
    -moz-transition height 1s
    -webkit-transition height 1s
    -o-transition height 1s
/*
  .el-breadcrumb:after, .el-breadcrumb:before, .el-button-group:after, .el-button-group:before, .el-form-item:after, .el-form-item:before, .el-form-item__content:after, .el-form-item__content:before
    display none
    */
  .el-input
    width 200px
  .el-form-item__label
    width 80px
.demo-block-control
  height 36px
  box-sizing border-box
  background-color rgb(255,255,255)
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  text-align center
  color rgb(211,220,230)
  cursor pointer
  position relative
  border 1px solid rgb(234,238,251)
  transition 0.2s
  i
    font-size 12px
    line-height 36px
    transition 0.3s
.el-form .el-form-item:last-child
  margin-bottom 0

.demo-block-control:hover
  color $color2

.edit_mains
  margin 20px 0

.el-button-group
  position relative

.showTableColController
  position absolute
  z-index 100
  background-color #fff
  padding 10px 30px 10px 15px
  overflow overlay
  max-height 100px
  right 45px
  margin-top 41px
  border 1px solid $color2
  border-radius 5px
  border-right none

  li
    max-width 130px
    height 30px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

.alert_col
  margin-bottom 10px

.down_file
  -webkit-transform rotateZ(180deg)
  -moz-transform rotateZ(180deg)
  -o-transform rotateZ(180deg)
  -ms-transform rotateZ(180deg)
  transform rotateZ(180deg)
