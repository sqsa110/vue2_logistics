radius-size = 5px
$fd_background_active = #58B7FF
$fd_background = #20A0FF
$fd_font_active = #1D8CE0
$fd_button_height = 2rem
$fd_input_height = 3rem
body
  background-color lighten($fd_background,90%)

.login
  .login_main
    width 500px
    padding 30px 50px
    margin 80px auto 0
    background-color #C0CCDA
    border-radius 15px
  .login_userinfo_main
    margin-top 30px
  .login_title_main
    font-size 0px

  .login_title_name
    display inline-block
    background-color $fd_background_active
    width 50%
    padding 10px 0
    text-align center
    font-size 16px
    color #fff
    text-decoration-line none
    height $fd_button_height
    line-height $fd_button_height
    &:first-of-type
      border-top-left-radius radius-size
      border-bottom-left-radius radius-size
    &:last-of-type
      border-top-right-radius radius-size
      border-bottom-right-radius radius-size

  .active
    background-color $fd_background
    font-weight 500

  input
    height $fd_input_height

.login_box
  margin-bottom 10px
  .login_input
    display inline-block
    width 100%
    position relative
    input
      text-indent 2rem
  .login_code_main
    vertical-align middle
  .login_code_main:before
    content ''
  .login_code_img
    width 100%
  .login_icon
    position absolute
    font-size 1.8rem
    top 0.8rem
    left 0.7rem
    color $fd_font_active

.login_btn
  margin-top 25px

.login_find
  float right
  button
    text-decoration underline
