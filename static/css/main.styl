$fd_input_height = 3rem
$fd_background_active = #6ff76f
$fd_background = #00ee00
$fd_font_active = #ff7400
$fc_background_3 = #009b00
$fc_background_4 = #2db32d
$fc_background_5 = #e4ffe4


body,div,ul,ol,li,span,p,h1,h2,h3,h4,h5,h6,strong,em,input,textarea,button,select,option,label,form,a,b,footer,header,i,svg,use,dd,dt,dl,table,tr,td,thead,tbody,tfoot,th
  margin 0
  padding 0

html,body
  font-size 10px

body
  font-family arial

ul,ol
  list-style-type none

a
  text-decoration-line none

.fd_border_red
  border-color red

.icon
  width 1em
  height 1em
  vertical-align -0.15em
  fill currentColor
  overflow hidden

.fd_input
  input,textarea
    &:focus,&:hover
      border-color $fd_background

.fd_fill_btn
  input,button,a
    width 100%
    height 100%

.fd_success_btn
  input,button,a
    background-color $fd_background
    color #fff
    font-size 1.8rem
    font-weight 900
    letter-spacing 8px
    &:focus,&:hover
      border-color $fc_background_3
      color $fc_background_3

.fd_button_text
    button
      color $fd_font_active
div
  &.input_clear
    width 0
    height 0
    display none

